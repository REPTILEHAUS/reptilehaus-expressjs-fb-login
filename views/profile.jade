extends layout

block content
  h1= title
  p ID: #{user.id}
  p Username: #{user.username}
  p Name #{user.displayName}
  p Sex #{user.gender}  
  if user.emails
    p Welcome to #{user.emails[0].value}
  if user.photos
     img(src="#{user.photos[0].value}")
  else
     img(src="#{user.photos}")  	

